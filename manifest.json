{
    "manifest_version": 3,
    "name": "Smart History Filter",
    "description": "Filters history by domain or URL using exception rules",
    "version": "1.0",
    "permissions": ["history", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  